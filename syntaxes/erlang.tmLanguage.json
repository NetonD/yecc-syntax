{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Erlang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "markup.bold",
				"match": "Erlang code"
			},
			{
				"name": "markup.bold",
				"match": "Nonterminals"
			},
			{
				"name": "markup.bold",
				"match": "Header"
			},
			{
				"name": "markup.bold",
				"match": "Terminals"
			},
			{
				"name": "markup.bold",
				"match": "Rootsymbol"
			},
			{
				"name": "markup.bold",
				"match": "Unary"
			},
			{
				"name": "markup.bold",
				"match": "Left"
			},
			{
				"name": "markup.bold",
				"match": "Right"
			},
			{
				"name": "markup.bold",
				"match": "Nonassoc"
			},
			{
				"name": "comment",
				"match": "\\%.*"
			},
			{
				"name": "constant.character.escape",
				"match": "->| : "
			},
			{
				"name": "constant.language",
				"match": "[a-zA-Z]+([a-zA-Z]|_|[0-9])*"
			},
			{
				"name": "entity.other.attribute-name",
				"match": "\\'\\$[0-9]\\'"
			},
			{
				"name": "variable.language",
				"match": "Silva"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.erlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.erlang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.erlang"
}